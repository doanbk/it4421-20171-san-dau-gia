            <ul class="nav navbar-nav navbar-right navbar-collapse collapse">
                <li><a href="/login"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div>
    </nav>
    <!-- End header -->


    <!-- Sign Up/Login Tab -->
    <div id="signupLoginTab" class="well">
        <ul class="nav nav-tabs nav-pills nav-justified">
            <li class="active"><a data-toggle="tab" href="#signup">Sign Up</a></li>
            <li><a data-toggle="tab" href="#login">Login</a></li>
        </ul>
        <div class="tab-content">
            <div id="signup" class="tab-pane fade in active">
                <div id="signupPersonal">
                    <form action="/api/user/createUser" method="POST" role="form">
                        <br>
                        <div class="radioBtn row col-md-12">
                            
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <label class="radio-inline"><input type="radio" id="su-r1" name="role" checked="checked" value="personal">Personal Account</label>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <label class="radio-inline"><input type="radio" id="su-r1" name="role" value="business">Business Account</label>
                            </div>
                        
                        </div>
                        <br> <br>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" id="su-yourname" placeholder="Your username" required="required" name="username">
                        </div>
                        <div class="form-group">
                            <label >Email</label>
                            <input type="email" class="form-control" id="su-email" placeholder="Your Email" required="required" name="email">
                        </div>
                        <div class="form-group">
                            <label >Password</label>
                            <input type="password" class="form-control" id="su-password" placeholder="Password" required="required" name="password">
                        </div>
                        <div class="form-group">
                            <label >Phone number</label>
                            <input type="phone" class="form-control" id="su-phone" placeholder="Phone number" required="required" name="phone">
                        </div>
                        <button id="registerBtn" type="submit" class="btn btn-success col-md-12" >Register</button>
                    </form>
                </div>

                <div id="signupBusiness" class="hide">
                    <form action="" method="POST" role="form">
                        <div class="form-group">
                            <label>Legal Business Name</label>
                            <input type="text" class="form-control" id="" placeholder="Legal Business Name" required="required" name="bName-signup">
                        </div>
                        <div class="form-group">
                            <label >Legal Business Email</label>
                            <input type="email" class="form-control" id="" placeholder="Legal business email" required="required" name="bEmail-signup">
                        </div>
                        <div class="form-group">
                            <label >Password</label>
                            <input type="password" class="form-control" id="" placeholder="Password" required="required" name="bPassword-signup">
                        </div>
                        <div class="form-group">
                            <label>Legal Business Phone</label>
                            <input type="number" class="form-control" id="" placeholder="Legal business phone" required="required" name="bPhone-signup">
                        </div>

                        <button id="bRegisterBtn" type="submit" class="btn btn-success col-md-12">Register</button>
                    </form>
                </div>
                
                
            </div> 
            <div id="login" class="tab-pane fade">
                <br> <br>
                <form action="/api/user/login" method="POST" role="form">
                    
                    <div class="form-group">
                        <label for="">Username</label>
                        <input type="text" class="form-control" id="" placeholder="Your username" required="required" name="username">
                    </div>
                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" class="form-control" id="" placeholder="Password" required="required" name="password">
                    </div>
                    <br>
                    <button id="loginBtn" type="submit" class="btn btn-success col-md-12">Log In</button>
                </form>
            </div>
        </div>
    </div>
