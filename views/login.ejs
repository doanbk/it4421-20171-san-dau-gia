    <!-- Sign Up/Login Tab -->
    <div id="signupLoginTab" class="well">
        <ul class="nav nav-tabs nav-pills nav-justified">
            <li class="active"><a data-toggle="tab" href="#signup">Sign Up</a></li>
            <li><a data-toggle="tab" href="#login">Login</a></li>
        </ul>
        <div class="tab-content">
            <div id="signup" class="tab-pane fade in active">
                <div id="signupPersonal">
                    <form action="/api/user/createUser" method="POST" role="form">
                        <br>
                        <div class="radioBtn row col-md-12">
                            
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <label class="radio-inline"><input type="radio" id="su-r1" name="role" checked="checked" value="personal">Personal Account</label>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <label class="radio-inline"><input type="radio" id="su-r1" name="role" value="business">Business Account</label>
                            </div>
                        
                        </div>
                        <br> <br>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" id="su-yourname" placeholder="Your username" required="required" name="username">
                        </div>
                        <div class="form-group">
                            <label >Email</label>
                            <input type="email" class="form-control" id="su-email" placeholder="Your Email" required="required" name="email">
                        </div>
                        <div class="form-group">
                            <label >Password</label>
                            <input type="password" class="form-control" id="su-password" placeholder="Password" required="required" name="password">
                        </div>
                        <div class="form-group">
                            <label >Phone number</label>
                            <input type="phone" class="form-control" id="su-phone" placeholder="Phone number" required="required" name="phone">
                        </div>
