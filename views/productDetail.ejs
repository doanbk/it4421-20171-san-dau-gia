<!DOCTYPE html>

<html>
    <head>
        
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width initial-scale=1">
        <title>Product Detail</title>
        
        
        <link href="/resources/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="/resources/css/style.css" rel="stylesheet" type="text/css">
        <script src="/resources/js/jquery-3.1.1.min.js" type="text/javascript"> </script>
        <script src="/resources/bootstrap/js/bootstrap.min.js" type="text/javascript"> </script>
        <script src="/resources/js/socket.io.js"></script>
        <script src="/resources/js/script.js" type="text/javascript"></script>
        <!-- <script src="/resources/js/countTime.js" type="text/javascript"></script> -->
    
    </head>
<body>
    <!-- Header -->
    <%- include('partition/header.ejs') %>

    <!-- Content -->
    <div class="content container">
        
        <hr>
        <div class="row">

            <div class="col-md-4 col-lg-4 imgPreview well">
                <!-- Banner -->
                <div id="carousel-id" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-id" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-id" data-slide-to="1"></li>
                        <li data-target="#carousel-id" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active productPreviewDetail">
                            <img src="<%- product.image %>"  class="center-block  imgProductDetail">
                        </div>
                        <div class="item productPreviewDetail">
                            <img src="<%- product.image %>"  class="center-block imgProductDetail ">
                        </div>
                        <div class="item productPreviewDetail">
                            <img src="<%- product.image %>" class="center-block imgProductDetail">
                        </div>
                    </div>
                    <a class="left carousel-control" href="#carousel-id" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                    <a class="right carousel-control" href="#carousel-id" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
                <!-- End banner -->
            </div>

            
            <div class="col-md-8 col-lg-8 well" id="productDetail8">
                <h3><%- product.name %></h3>
                <div class="starRating">
                    <div class="stars">
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                    </div>
                </div>
                <hr >
                <div class="row">
                    
                    <div class="col-md-8 col-lg-8">
                        <div> 
                            <div class="itemTitle">Item Describe: </div>
                            <span class="describe"><i>"Vintage Sterling Silver Silpada Beautiful Large Garnet Ring Size 7" </i></span>
                            <br>
                            <div>
                                <span class="itemTitle"> Time Left: </span><div id="timeleft"> </div> 
                            </div>
                            <!-- <span id="timeout">Time Out!</span>
                            <div class="countTime">
                                <div class="itemTitle" id="titleTimeLeft">Time left: </div>
                                <div class="time-left">
                                        <span id="minute">0</span>
                                        <span id=twodot>:</span>
                                        <span id="second">10</span>
                                </div>
                                
                            </div> -->
                            <br>
                            <button type="button" class="btn btn-info btn-lg checkStt" data-toggle="modal" data-target="#modalCheckStt">Check Your Status</button>
                            
                        </div>
                        
                        <div class="bidPlace">
                            <div class="itemTitle">Current Bid: <span id="currentBid"> US $560</span></div>
                            <a href="/bidHistory">[6 bids]</a>
                            
                                <form action="" method="" class="input-group" role="form">
                                    <span class="input-group-addon">$</span>
                                    <input type="number" class="form-control" min="570" id="price">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="button" onclick="bidPlace()">Bid Place</button>
                                    </span>
                                </form>
                            <div>Enter US $570 or More</div>
                            
                        </div>
                    </div>
                    
                    <div class="col-md-4 col-lg-4">
                        <div id="sellerInfo">
                            <!-- <a href="#">Top-rated Seller</a> -->
                            <p id="sellerAcc"> 
                                <a href="/userProfile">Minhnb</a> 
                                <span id="numStars"> (450 <span class="glyphicon glyphicon-star"></span>)</span>
                            </p>
                            
                            <img class="img-responsive verifedimg" src="resources/images/verified.jpg" alt="">
                            <br>
                            <hr>
                            <p class="feedback">100% Positive feedback</p>
                            <ul>
                                <li class="glyphicon glyphicon-ok"> Consistently receives highest buyers' ratings</li>
                                <li class="glyphicon glyphicon-ok"> Ships items quickly</li>
                                <li class="glyphicon glyphicon-ok"> Has earned a track record of excellent service</li>
                            </ul>

                        </div>
                    </div>
                    
                </div>
            </div>
            

        </div>
        <!-- End row content -->

    </div>
    <!-- End content -->

    <!-- Modal check stt -->
    <div id="modalCheckStt" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Congratulations!</h3>
                </div>
                <div class="modal-body">
                    <h4>You've just won this Auction!</h4>
                    <div class="itemTitle">Item:  </div>
                    <span class="productName"><i> <%- product.name %> </i></span>
                    <br>
                    <div class="itemTitle">Your Bid: <span id="currentBid"> US $560</span></div>
                    <br>
                    <div class="itemTitle">Status:  </div>
                    <span style="color:green;">Waiting for pay</span>
                    <hr>
                    <h4>You have 2 days to complete buy this item by click following link: </h4>
                    <a href="/buyItem"> Go to buy this item</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <!-- /Modal check stt -->

    <br>
    <!-- Footer -->
    <div align="center">
        Code by <a href="#"> Group 5 </a>
    </div>
    
    <!-- End footer -->

    <script src="/resources/js/moment.js"></script>
    <script>
        const end_time = "<%- product.end_time %>";
        var socket = io();
        var bidPlace = function(){
            var newPrice = document.getElementById("price").value;
            var obj = {
                newPrice,
                id : "<%- product._id %>",
                username: "<%- username %>",
            }
            socket.emit('send price', obj);
        }
        socket.on('response', function(val){
            alert(val);
        });
    </script>
    <script src="/resources/js/detailpage.js"></script>
</body>

</html>
