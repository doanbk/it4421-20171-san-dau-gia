<!DOCTYPE html>

<html>
    <head>
        
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width initial-scale=1">
        <title>Home Page</title>
        
        
        <link href="/resources/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="/resources/css/style.css" rel="stylesheet" type="text/css">
        <script src="/resources/js/jquery-3.1.1.min.js" type="text/javascript"> </script>
        <script src="/resources/bootstrap/js/bootstrap.min.js" type="text/javascript"> </script>
        <script src="/resources/js/script.js" type="text/javascript"></script>
    
    </head>
<body>
    <!-- header -->
    <%- include('partition/header.ejs') %>

    <!-- Content -->
    <div class="content container">
        

        <!-- Banner -->
        <div id="carousel-id" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
             <li data-target="#carousel-id" data-slide-to="0" class="active"></li>
             <li data-target="#carousel-id" data-slide-to="1"></li>
             <li data-target="#carousel-id" data-slide-to="2"></li>
            </ol>
  
            <div class="carousel-inner carousel-slide">
              <div class="item active">
                <img src="resources/images/slide1.png" width="100%" class="center-block">
              </div>
              <div class="item">
                <img src="resources/images/slide2.png" width="100%" class="center-block">
              </div>
              <div class="item">
                <img src="resources/images/slide3.png" width="100%" class="center-block">
              </div>
            </div>
            <a class="left carousel-control" href="#carousel-id" data-slide="prev"><span class="glyphicon glyphicon-chevron-left "></span></a>
            <a class="right carousel-control" href="#carousel-id" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
          </div>

        <!-- End banner -->

        <hr>
        <div class="row">
            <div class="col-md-3">

                <nav class="navbar navbar-default navLeft">

                        
                        <h3> BK Live Auction</h3>
                        <div class="navbar-header">
                            <button id="btnCollapse" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navLeftCollapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>                        
                            </button>
                            
                        </div>
                        <hr>
                        <div class="collapse navbar-collapse" id="navLeftCollapse">
                            <ul class="nav nav-pills nav-stacked selectCategoryMenu">
                                    <li class="selectCategory active"> <a href="#" class="cName">New Product</a></li>
                                    <li class="selectCategory"> 
                                        <a href="#" class="cName">Electronic</a>
                                        <ul class="dropdownStatic" role="menu">
                                            <li class="subCategory"><a href="#">Computer</a></li>
                                            <li class="subCategory"><a href="#">TV</a></li>
                                            <li class="subCategory"><a href="#">Smart Phone</a></li>
                                        </ul>
                                    </li>
                                    <li class="selectCategory"> 
                                        <a href="#" class="cName">Fashion</a>
                                        <ul class="dropdownStatic" role="menu">
                                            <li class="subCategory"><a href="#">Men</a></li>
                                            <li class="subCategory"><a href="#">Women</a></li>
                                            <li class="subCategory"><a href="#">Watches</a></li>
                                            <li class="subCategory"><a href="#">Shoes</a></li>
                                        </ul>
                                    </li>
                                    <li class="selectCategory"> 
                                        <a href="#" class="cName">Other Category</a>
                                        <ul class="dropdownStatic" role="menu">
                                            <li class="subCategory"><a href="#">Toy</a></li>
                                            <li class="subCategory"><a href="#">Baby</a></li>
                                            <li class="subCategory"><a href="#">Other</a></li>
                                        </ul>
                                    </li>
                            </ul>
                            
                        </div>
                   
                </nav>
            </div>

            <!-- Product List -->
            <div class="col-md-9 col-lg-9">
                <div class="row">

                    <% products.forEach((product) => { %>
                        <div class="col-sm-6 col-md-4 col-lg-4">
                            <div class="table-bordered productPreview">
                                <img src="<%- product.image %>" alt="<%- product.image %>" class="img-display table-bordered img-responsive">
                                <div class="caption">
                                    <a href="/detail?id=<%-product._id%>">
                                        <h4 class="textPreview"> <%- product.name %></h4>
                                    </a>
                                    <div class="bidTimePreview">
                                        <h4> Current Bid: <%- product.price %>$ </h4>
                                        <div id="timeLeft"><span class="glyphicon glyphicon-time"></span> Time: <%- product.start_time %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%}) %>
                    
                </div>   
                
                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                              <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="/?page_number=1">1</a></li>
                        <li><a href="/?page_number=2">2</a></li>
                        <li><a href="/?page_number=3">3</a></li>
                        <li><a href="/?page_number=4">4</a></li>
                        <li><a href="/?page_number=5">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                              <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
            <!-- End product lists -->
            
            

        </div> <!-- End row content -->

        
    </div>
    
    <!-- End content -->
    <br>
    <!-- Footer -->
    <div align="center">
        Code by <a href="#"> Group 5 </a>
    </div>
    
    <!-- End footer -->
 
</body>
</html>